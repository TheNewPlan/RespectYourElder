<p id="notice"><%= notice %></p>

<h1>Promotions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image Path</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.p_title %></td>
        <td><%= promotion.p_desc %></td>
        <td><%= promotion.p_image %></td>
        <td><%= promotion.p_start %></td>
        <td><%= promotion.p_end %></td>
        <td><% if @active == 1 %>
              Active!
              <% else %>
          Inactive
              <%end%>
              </td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Promotion', new_promotion_path %>
