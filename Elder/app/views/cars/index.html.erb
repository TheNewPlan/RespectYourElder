<p id="notice"><%= notice %></p>

<%= stylesheet_link_tag "application" %>

<h1>Cars</h1>
<%= link_to "Index", nav_index_path %>
<%= link_to "About", nav_about_path %>
<%= link_to "Contact", nav_contact_path %>
<table>
  <thead>
    <tr>
      <th>Car make</th>
      <th>Car year</th>
      <th>Car price</th>
      <th>Car mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_make %></td>
        <td><%= car.car_year %></td>
        <td><%= car.car_price %></td>
        <td><%= car.car_mileage %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
