<p id="notice"><%= notice %></p>

<%= stylesheet_link_tag "application" %>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Car Make</th>
      <th>Car Model</th>
      <th>Year</th>
      <th>Price</th>
      <th>Mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_make %></td>
        <td><%= car.car_model %></td>
        <td><%= car.car_year.year %></td>
        <td>(USD) <%= number_to_currency(car.car_price) %></td>
        <td><%= number_with_delimiter(car.car_mileage, :delimiter => ',') %> miles</td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

